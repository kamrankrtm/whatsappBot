# Server Configuration
PORT=3000

# WhatsApp Bot Configuration
# Set to 'true' to enable headless mode for WhatsApp Web (no browser UI)
HEADLESS=true

# Set to 'false' during development to see the browser UI
# HEADLESS=false

# Optional: Proxy configuration
# PROXY_SERVER=http://proxy.example.com:8080

# Liara Headless Chrome Configuration
# Set to 'true' to use remote Headless Chrome instead of local browser
USE_REMOTE_CHROME=false
# URL of your Liara Headless Chrome instance
CHROME_WS_ENDPOINT=wss://chorom-gga4e3lwi.liara.run
# Token for your Liara Headless Chrome instance (available in your Liara app environment variables)
CHROME_TOKEN=your-token-here

# Database Configuration
# MongoDB connection details (these will be provided by Liara when you create a MongoDB database)
DB_HOST=mongodb-yourappname.liara.ir
DB_PORT=27017
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password 