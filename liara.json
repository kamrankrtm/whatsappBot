{
  "platform": "node",
  "app": "whatsapp",
  "port": 3000,
  "node": {
    "version": "14"
  },
  "disks": [
    {
      "name": "data",
      "mountTo": "/app/.wwebjs_auth"
    }
  ],
  "environments": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium"
  },
  "build": {
    "apt": {
      "packages": [
        "chromium",
        "chromium-driver",
        "libgbm1",
        "libasound2"
      ]
    }
  }
} 